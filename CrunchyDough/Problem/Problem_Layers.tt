        {
            <#=P.CSV(i, z => "P"+z+" problem"+z+" = null;", "\n\t\t\t")#>

            R result = ProblemManager.GetInstance().Layer(operation, (type, creator) => {
                <#=P.CSV(i, z => "if(type.CanBeTreatedAs<P"+z+">()){ problem"+z+" = creator() as P"+z+"; return true; }", "\n\t\t\t\telse ")#>
                
                return false;
