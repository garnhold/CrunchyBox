<#+
public delegate string Operation(int number);

static public class P
{
    static public string CSV(int count, Operation operation, string seperator=", ")
    {
        string output = "";
        
        for(int i = 0; i < count; i++)
        {
            if(output != "")
                output += seperator;
                
            output += operation(i + 1);
        }
        
        return output;
    }
}
