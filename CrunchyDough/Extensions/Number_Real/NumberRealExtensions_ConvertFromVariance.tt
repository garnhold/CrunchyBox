        }
        static public <#=type.type_name#> ConvertFromVarianceToPercent(this <#=type.type_name#> item, <#=type.class_name#>Variance variance)
        {
            return item.ConvertFromVarianceToPercent(variance.value, variance.radius);
        }

        static public <#=type.type_name#> ConvertFromVarianceToVariance(this <#=type.type_name#> item, <#=type.type_name#> src_value, <#=type.type_name#> src_radius, <#=type.type_name#> dst_value, <#=type.type_name#> dst_radius)
        {
