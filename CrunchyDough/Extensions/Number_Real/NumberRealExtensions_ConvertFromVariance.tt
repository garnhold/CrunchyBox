using System;
using System.Collections;
using System.Collections.Generic;

namespace Crunchy.Dough
{
    static public class NumberRealExtensions_ConvertFromVariance
    {
<# foreach(NumericInfo type in type_info){#>
        static public <#=type.type_name#> ConvertFromVarianceToOffset(this <#=type.type_name#> item, <#=type.type_name#> value, <#=type.type_name#> radius)
        {
            return (item - value) / radius;
        }
        static public <#=type.type_name#> ConvertFromVarianceToOffset(this <#=type.type_name#> item, <#=type.class_name#>Variance variance)
        {
            return item.ConvertFromVarianceToOffset(variance.value, variance.radius);
        }

        static public <#=type.type_name#> ConvertFromVarianceToPercent(this <#=type.type_name#> item, <#=type.type_name#> value, <#=type.type_name#> radius)
        {
